<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="org.csstudio.raon.product.application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.csstudio.startup.application.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.csstudio.raon.product.application"
            name="RAON CS-Studio">
         <property
               name="appName"
               value="RAON CS-Studio">
         </property>
         <property
               name="introTitle"
               value="Welcome to RAON Control System Studio&lt;/h1&gt;&lt;p&gt;RAON Control System Studio is an Eclipse-based collections of tools to monitor and operate large scale control systems, such as the ones in the accelerator community.&lt;p&gt;This RAON CS-Studio is optimized for the SRF Test Facility.">
         </property>
         <property
               name="introBrandingImage"
               value="product:icons/welcome.png">
         </property>
         <property
               name="introBrandingImageText"
               value="RAON Control System Studio">
         </property>
         <property
               name="windowImages"
               value="icons/css16.png,icons/css32.png,icons/css48.png,icons/css64.png,icons/css128.png">
         </property>
         <property
               name="startupForegroundColor"
               value="FFFFFF">
         </property>
         <property
               name="startupMessageRect"
               value="7,200,466,20">
         </property>
         <property
               name="startupProgressRect"
               value="5,222,470,15">
         </property>
         <property
               name="preferenceCustomization"
               value="platform:/config/plugin_customization.ini">
         </property>
         <property
               name="introDescription-firststeps"
               value="Getting started with RAON CS-Studio">
         </property>
         <property
               name="introDescription-tutorials"
               value="Learn how to use RAON CS-Studio">
         </property>
         <property
               name="introDescription-whatsnew"
               value="New features in RAON CS-Studio">
         </property>
         <property
               name="aboutImage"
               value="icons/about.png">
         </property>
         <property
               name="aboutText"
               value="%aboutText">
         </property>
      </product>
   </extension>
